  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'summonc'",
      "cargo": {
        "args": [
          "build",
          "--bin=summonc",
          "--package=cli"
        ],
        "filter": {
          "name": "summonc",
          "kind": "bin"
        }
      },
      "args": [
        "examples/nthPrime.ts"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'summon'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=summon",
          "--package=summon"
        ],
        "filter": {
          "name": "summon",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}